{
  "org": "$HZN_ORG_ID",
  "label": "$SERVICE_NAME for $ARCH",
  "url": "$SERVICE_NAME",
  "version": "$SERVICE_VERSION",
  "arch": "$ARCH",
  "description": "Preconfigured Fledge service for Raspberry Pi 4",
  "documentation": "https://github.com/open-horizon-services/SmartAg-foundation/blob/main/README.md",
  "public": true,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
    {
      "name": "ACCESS_KEY",
      "label": "Access key",
      "type": "string",
      "defaultValue": "PKI here"
    }
  ],
  "deployment": {
    "services": {
      "$SERVICE_NAME": {
        "image": "$SERVICE_CONTAINER",
        "devices": [
          "/dev/gpiomem:/dev/gpiomem"
        ],
        "binds": [
          "/var/access_key:/var/access_key"
        ]
      }
    }
  }
}

